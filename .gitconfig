[user]
    name = Selwyn
    email = talk@selwyn.cc
    signingkey = ~/.ssh/id_ed25519.pub
[alias]
    ad = add .
    br = branch
    ci = commit
    co = checkout
    lo = log --oneline -n 15
    st = status
    up = pull --rebase
    re = restore
[push]
    default = current
[core]
    editor = hx
    excludesfile = ~/.config/.global-gitignore
[rebase]
    autoStash = true
[init]
    defaultBranch = main
[gpg]
    format = ssh
[commit]
    gpgsign = true
[diff]
    external = difft

[includeIf "gitdir:~/codeground/a-voorhoede/a-forks/"]
    path = ~/codeground/a-voorhoede/.gitconfig
